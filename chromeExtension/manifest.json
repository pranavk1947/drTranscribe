{
  "manifest_version": 3,
  "name": "drTranscribe",
  "version": "2.0.0",
  "description": "Real-time clinical extraction from video consultations",
  "permissions": [
    "activeTab",
    "tabCapture",
    "offscreen",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://app.zoom.us/*",
    "https://zoom.us/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://app.zoom.us/wc/*",
        "https://zoom.us/wc/*",
        "https://zoom.us/j/*"
      ],
      "js": ["jspdf.umd.min.js", "export.js", "wav-encoder.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
